<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:clipToPadding="false"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/device_setup"
            android:textSize="28sp"
            android:textColor="#1A1C1E"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:strokeColor="#E0E2E5"
            app:strokeWidth="1dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="20dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_usb"
                    app:tint="#4A4458"
                    android:contentDescription="@string/usb_icon"
                    android:layout_marginEnd="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/system_status"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="#74777F"
                        android:letterSpacing="0.05"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/usbInfoText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/no_usb_device_connected"
                        android:textSize="16sp"
                        android:textColor="#1A1C1E"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/connection_method"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1A1C1E"
                    android:layout_marginBottom="12dp" />

                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/connectionToggle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:singleSelection="true"
                    app:selectionRequired="false">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnUsb"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/usb"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        app:cornerRadius="12dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnBt"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/bluetooth"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        app:cornerRadius="12dp"/>

                </com.google.android.material.button.MaterialButtonToggleGroup>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnKeepScreenOn"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="@string/keep_screen_on"
                    android:textStyle="bold"
                    android:textColor="#1D192B"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    app:cornerRadius="22dp"
                    android:layout_marginBottom="16dp" />


            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/server_configuration"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1A1C1E"
                    android:layout_marginBottom="16dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/url"
                    app:boxStrokeColor="#303030"
                    android:layout_marginBottom="16dp"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/url_ip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textUri"
                        android:text="@string/http_example_com"
                        android:textColor="#2E2E2E"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/room_id"
                    app:boxStrokeColor="#303030"
                    android:layout_marginBottom="16dp"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/roomId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textUri"
                        android:text="@string/admin_is"
                        android:textColor="#2E2E2E"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/room_pwd"
                    app:boxStrokeColor="#303030"
                    android:layout_marginBottom="16dp"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/roomPwd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textUri"
                        android:text="@string/notpwd"
                        android:textColor="#2E2E2E"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/serviceButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/start_service"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            app:cornerRadius="30dp"
            app:backgroundTint="#6750A4"
            android:layout_marginBottom="32dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E2E5"
            android:layout_marginBottom="24dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/versionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:letterSpacing="0.1"
                android:text="@string/version"
                android:textAllCaps="true"
                android:textColor="#74777F"
                android:textSize="12sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:letterSpacing="0.1"
                android:text="@string/arigato"
                android:textAllCaps="true"
                android:textColor="#74777F"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>